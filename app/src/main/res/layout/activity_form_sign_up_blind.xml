<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpCForm"
    android:background="@color/mistyRose">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_beta"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/signUpFormBlindLevel"
                    android:textColor="@color/normal_color"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"/>


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/textView">


                    <Spinner
                        android:id="@+id/spinnerCategoryLevelBlind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/style_spiner" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Phone"
                        android:textColor="@color/normal_color"
                        android:textSize="26sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/editTextPhoneNumberFormBlind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="name"
                        android:ems="10"
                        android:hint="@string/Phone"
                        android:inputType="text"
                        android:textSize="24sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        tools:ignore="TextFields" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="@string/signUpFormBlindProfession"
                        android:textColor="@color/normal_color"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/editTextProfessionFormBlind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="name"
                        android:ems="10"
                        android:hint="@string/signUpFormBlindProfession"
                        android:inputType="text"
                        android:textSize="24sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="@string/signUpFormBlindAbilities"
                        android:textColor="@color/normal_color"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/editTextAbilitiesBlind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="name"
                        android:ems="10"
                        android:hint="@string/signUpFormBlindAbilities"
                        android:inputType="text"
                        android:textSize="24sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/signUpFormBlindAddress"
                        android:textColor="@color/normal_color"
                        android:textSize="26sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/editTextAddressFormBlind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="name"
                        android:ems="10"
                        android:hint="@string/sign_up_c_location"
                        android:inputType="text"
                        android:textSize="24sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordSignUpBlind2"
                        tools:ignore="UselessLeaf" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonContinueFormBlind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/confirm"
                    android:textSize="28dp"
                    android:textColor="@color/ghost_white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/btn_orange"/>

                <Button
                    android:id="@+id/buttonBackFormBlind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/cancel"
                    android:textSize="28dp"
                    android:textColor="@color/ghost_white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.516"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonContinueFormBlind"
                    android:background="@drawable/btn_blue"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>