<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileBlindFragment">

    <!-- Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mistyRose">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonDataProfileBlind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:background="@color/mistyRose"
                android:text="@string/dataPerfil"
                android:textColor="#E65100"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonsecurityblind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnpoliticalsecurity"
                android:layout_marginTop="28dp"
                android:background="@color/mistyRose"
                android:textStyle="bold"
                android:textColor="@color/marinian_blue"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/buttonaboutblind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnaboutus"
                android:layout_marginTop="28dp"
                android:background="@color/mistyRose"
                android:textStyle="bold"
                android:textColor="@color/marinian_blue"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/signOffBlind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/btnlogout"
                android:drawableEnd="@drawable/ic_logout"
                android:background="@color/mistyRose"
                android:textStyle="bold"
                android:textColor="@color/fire_brick"
                android:textSize="30sp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/base_flotante" />

</androidx.constraintlayout.widget.ConstraintLayout>